<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradiente"
    tools:context="activities.MainActivity">

    <!-- Área Branca com Widgets -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_container_branco"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCadPetP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="CADASTRO DE PET PERDIDO"
                android:textColor="#9f4903"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:background="#6A333333" />

            <ImageView
                android:id="@+id/ivPetImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/btnSelecionarImagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="75dp"
                android:background="@drawable/bg_bt_transparente"
                android:fontFamily="@font/montserrat_bold"
                android:text="SELECIONAR IMAGEM"
                android:textColor="@color/laranja" />

            <EditText
                android:id="@+id/etNomeAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/montserrat"
                android:hint="Nome do animal"
                android:padding="8dp"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinnerTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/montserrat" />

            <EditText
                android:id="@+id/etUltimaLocalizacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/montserrat"
                android:hint="Última localização"
                android:padding="8dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etFormaContato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/montserrat"
                android:hint="Forma de contato"
                android:padding="8dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etDescAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/montserrat"
                android:hint="Descrição do animal"
                android:padding="8dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnCadastrarPetP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_bt_laranja"
                android:fontFamily="@font/montserrat_bold"
                android:text="CADASTRAR"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
